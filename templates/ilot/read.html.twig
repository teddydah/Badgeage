{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Admin{% endblock %}

{% block titre %}
    <h1>Ilot {{ ilot.nomIRL }}</h1>
{% endblock %}

{% block body %}
    <section class="admin ilots read-ilot">
        {% include('_flash_messages.html.twig') %}
        <table class="table table-striped table-light text-center">
            <tbody>
            <tr>
                <th>Nom IRL :</th>
                <td>{{ ilot.nomIRL }}</td>
            </tr>
            <tr>
                <th>Nom URL :</th>
                <td>{{ ilot.nomURL }}</td>
            </tr>
            <tr>
                <th>Nom AX :</th>
                <td>{{ ilot.nomAX }}</td>
            </tr>
            <tr>
                <th>Initiales :</th>
                <td>{{ ilot.initiales }}</td>
            </tr>
            <tr>
                <th>Imprimante :</th>
                <td>{{ ilot.printer.nom }}</td>
            </tr>
            </tbody>
        </table>
        <div class="boutons">
            <div class="item-1">
                <a class="prev item-btn-1 bouton" id="btn_retour" href="{{ path }}"
                   role="button"
                   title="Page précédente"><span>Précédent</span></a>
                <a class="nav-admin item-btn-2 bouton" href="{{ path('admin_index') }}"
                   title="Page admin"><span>Admin</span></a>
            </div>
        </div>
    </section>
{% endblock %}
