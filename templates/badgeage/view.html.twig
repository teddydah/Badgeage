{% extends 'base.html.twig' %}

{% block body %}
    {% if ilot.nomIRL == 'Peinture' %}
        <section class="paint">
            <ul>
                {% for sousIlot in sousIlots %}
                    <li>
                        <a href="{{ path('badgeage_view', { 'nomURL' : sousIlot.nomURL }) }}"
                           title="Ilot {{ sousIlot.nomIRL }}">{{ sousIlot.nomIRL }}</a>
                    </li>
                {% endfor %}
            </ul>
            <div class="boutons">
                <div class="item-1">
                    {# TODO #}
                    <a class="prev item-btn-1 bouton" id="btn_retour_idx" onclick="history.back()" target="_self"
                       role="button"
                       title="Page précédente">Précédent</a>
                    <a class="home item-btn-2 bouton" href="{{ path('main_home') }}" title="Page d'accueil">Accueil</a>
                </div>
            </div>
        </section>
    {% else %}
        <section class="ilot">
            <div class="form">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
            {% include('_flash_messages.html.twig') %}
            <div class="boutons">
                {% if ilot.nomURL is same as('FacesPerm') %}
                    <div class="item-4">
                        <a class="ilot item-btn-6 bouton" href="{{ path('badgeage_view', { 'nomURL' : 'FacesTempo' }) }}"
                           title="Ilot Faces Temporaire">Faces Temporaire</a>
                    </div>
                {% elseif ilot.nomURL is same as('FacesTempo') %}
                    <div class="item-4">
                        <a class="ilot item-btn-6 bouton" href="{{ path('badgeage_view', { 'nomURL' : 'FacesPerm' }) }}"
                           title="Ilot Faces Permanente">Faces Permanente</a>
                    </div>
                {% elseif ilot.nomURL is same as('FraisagePerm') %}
                    <div class="item-4">
                        <a class="ilot item-btn-6 bouton" href="{{ path('badgeage_view', { 'nomURL' : 'FraisageTempo' }) }}"
                           title="Ilot Fraisage Tempo">Fraisage Tempo</a>
                    </div>
                {% elseif ilot.nomURL is same as('FraisageTempo') %}
                    <div class="item-4">
                        <a class="ilot item-btn-6 bouton" href="{{ path('badgeage_view', { 'nomURL' : 'FraisagePerm' }) }}"
                           title="Ilot Fraisage Permanent">Fraisage Permanent</a>
                    </div>
                {% endif %}
                <div class="item-1">
                    {# TODO #}<a class="prev item-btn-1 bouton" id="btn_retour_idx" onclick="history.back()"
                                 target="_self"
                                 role="button"
                                 title="Page précédente">Précédent</a>
                    <a class="home item-btn-2 bouton" href="{{ path('main_home') }}" title="Page d'accueil">Accueil</a>
                </div>
                <div class="item-2">
                    <a class="print item-btn-3 bouton"
                       href="{{ path('impression_etiquette', { 'nomURL' : ilot.nomURL }) }}"
                       title="Page impression">Impression</a>
                    <a class="photo item-btn-4 bouton" href="#" title="Page photo">Photo</a>
                </div>
                <div class="item-3">
                    <a class="options item-btn-5 bouton" href="{{ path('ilot_options', { 'nomURL' : ilot.nomURL }) }}"
                       title="Page options">Options</a>
                </div>
            </div>
        </section>
    {% endif %}
{% endblock %}
